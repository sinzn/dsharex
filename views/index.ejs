<!DOCTYPE html>
<html>
<head><title>File Sharing</title></head>
<body style="text-align:center;">
  <h2>Upload Files</h2>
  <form action="/upload" method="POST" enctype="multipart/form-data">
    <input type="file" name="files" multiple required>
    <br><br>
    <button type="submit">Upload</button>
  </form>

  <% if (link) { %>
    <hr>
    <h3>Download Your Files</h3>
    <input id="copyText" type="text" value="<%= link %>" readonly style="width:300px; padding:5px;"><br><br>
    <button onclick="copyLink()">Copy Link</button><br><br>
    <img src="<%= qr %>" alt="QR Code"><br>
    <p>Scan QR to download</p>
    <a href="<%= link %>">Click here to download</a>
    <script>
      function copyLink() {
        var copyText = document.getElementById("copyText");
        copyText.select();
        document.execCommand("copy");
        alert("Copied to clipboard!");
      }
    </script>
  <% } %>
</body>
</html>
